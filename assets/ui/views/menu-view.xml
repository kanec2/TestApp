<box style="padding: 0px;" width="100%" height="100%">
    <style>        
        .dot {
            width: 100%;
            height: 100%;
            background-color: $selection-background-color;
            border: 2px solid $selection-background-color;
            border-radius: 30px;
        }
        
        .dot-container:grow {
            animation: sizedotitem 0.2s ease 0s 1;
        }
        
        .dot-container:shrink {
            animation: sizedotitem 0.2s ease 0s 1 reverse backwards;
        }
        
        .dot:grow {
            animation: colordot 0.2s ease 0s 1;
        }
        
        .dot:shrink {
            animation: colordot 0.2s ease 0s 1 reverse backwards;
        }
    
        @keyframes sizedotitem {
            0% {
                padding-top: 10px;
                padding-left: 10px;
                padding-bottom: 10px;
                padding-right: 10px;
            }
            100% {
                padding-top: 0px;
                padding-left: 0px;
                padding-bottom: 0px;
                padding-right: 0px;
            }
        }
    
        @keyframes colordot {
            0% {
                background-color: $selection-background-color;
            }
            100% {
                background-color: $solid-background-color;
            }
        }
        .top-menu{
            background-opacity:0;
        }
        .menu {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }
        .menuitem {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }
        .menubar-button {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }
        .menu-filler {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }
        /************************************************************************
        ** MENUBAR
        *************************************************************************/
        .menubar {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }

        .menubar-button {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }

        .menubar.rounded .menubar-button {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }

        .menubar-button:hover {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }

        /*
        .menubar-button:active {
            background-color: $selection-background-color-hover;
            color: $hover-text-color;
        }
        */

        .menubar-button:down {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }

        .menubar-button-no-children {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }

        .menubar-button-no-children:hover {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }

        .menubar-button-no-children:down {
            background-color: $secondary-background-color;
            color: $down-text-color;
            border: 1px solid $normal-border-color;
        }

        .menubar-button:disabled {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }

        /************************************************************************
        ** MENU
        *************************************************************************/
        .menu {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }

        .menu.rounded {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }

        .menu.primary-menu.rounded {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }

        .menu.auto-width {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }

        .menu.expanded {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
