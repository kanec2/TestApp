        }

        /************************************************************************
        ** MENUITEMS
        *************************************************************************/
        .menuitem {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }

        .menuitem-label, .menuitem-checkbox, .menuitem-optionbox, .menuitem-shortcut-label {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }

        .menuitem-label:disabled, .menuitem-shortcut-label:disabled {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }

        .menuitem-shortcut-label {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }

        .menuitem-icon {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }

        .menuitem:hover, .menuitem:selected {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }

        .menuitem .label:hover, .menuitem .label:selected,
        .menuitem-checkbox:hover, .menuitem-checkbox:selected,
        .menuitem-optionbox:hover, .menuitem-optionbox:selected {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }

        .menuitem-expandable {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }

        .menuseparator {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }

        .menuseparator-line {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }

        .menu.rounded .menuitem {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }

        .menu.rounded .menuseparator {
            color: red; 
            background-color: #009F42;
            border:1px solid #009F42;
            background-opacity: .1;
        }
        .bitmap-button {
            background: none;
            padding: 6px 8px;
            border: none;
            color: #CCCCCC;
            background-image: "images/brand_logo.png";
            /*background-image-clip: 0px 0px 26px 65px;
            background-image-slice: 3px 3px 24px 62px;*/
        }
        
        .bitmap-button:hover {
            color: white;
        }
        .dot-container {
            height:100%;
        }
        .bitmap-button:down {
            /*background-image-clip: 0px 68px 26px 133px;*/
        }
        button {
            /^width: 100%;^/
            /*padding: 10px;*/
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
        }
        #quickMatchButton{
            height:1000px;
        }
        button > .dot-container {
            height:100%;
        }
    </style>
    <!--header-->
    <box  width="100%" height="10%" backgroundImage="images/bg_top_bar.png" verticalAlign="top">
        <label text="Maverick" horizontalAlign="center" verticalAlign="bottom" style="padding:-30px; font-size: 30px; color: #729F42; font-bold: true;"/>
        <menubar width="100%" height="100%" styleName="top-menu" horizontalAlign="center" padding="10" id="topBar" >
            <button  width="15%" height="100%"                     onclick="contentHold.selectedIndex = 0"              styleName="bitmap-button"/>
            <spacer  width="10%" />
            <menu    width="9%"  height="100%" text="Quick match"  onclick="contentHold.selectedIndex = 1" userData="0" styleName="dot-container" />
            <menu    width="9%"  height="100%" text="Lobby list"   onclick="contentHold.selectedIndex = 2" userData="1" styleName="menuitem" />
            <menu    width="9%"  height="100%" text="Single play"  onclick="contentHold.selectedIndex = 3" userData="2" styleName="menuitem" />
            <menu    width="9%"  height="100%" text="News"         onclick="contentHold.selectedIndex = 4" userData="3" styleName="menuitem" />
            <menu    width="9%"  height="100%" text="Inventory"    onclick="contentHold.selectedIndex = 5" userData="4" styleName="menuitem"/>
            <menu    width="9%"  height="100%" text="Settings"     onclick="contentHold.selectedIndex = 6" userData="5" styleName="menuitem"/>
            <spacer  width="60%" />
            <menu    width="5%"  height="100%" text= "profile not" visible="true"                          userData="6"  id="profileButton"/>
            <menubar width="5%"  height="100%" text= "profile"     visible="false"                         userData="7"  id="profileMenu"   >
                <menu text="Item">
                    <menuitem text="My profile" />
                    <menuitem text="Statistics" />
                    <menuitem text="Leave account" />
                </menu>
            </menubar>
        </menubar>
    </box>
    <box  width="100"  height="100" verticalAlign="center" horizontalAlign="center" includeInLayout="true" backgroundImage="images/bg_logo.png" />
    <!--Main content-->
    <hbox width="100%" height="90%" verticalAlign="bottom">
        <stack id="contentHold" visible="true" width="100%" height="100%">
            <main-menu-content />
            <quick-match-options />
            <lobby-list />
            <single-menu />
            <news-menu />
            <news-menu/>
            <settings-menu/>
        </stack>

        <vbox visible="false" layout="vertical" verticalAlign = "center" horizontalAlign="center">
            <button text="Start" />
            <button text="Settings" />
            <button text="Profile" />
            <button text="Show lobby invite" id="actionNotificationCallbackButton"  />
        </vbox>
    </hbox>
