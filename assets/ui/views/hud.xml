<box style="padding: 0px;" width="100%" height="100%">
    <style>        
        .resource-panel{
            padding:2px;
        }
        .bottom-menu{
            background-color:brown;
        }
        .mini-map{

        }
    </style>
    <hbox width="100%" height="5%">
        <hbox height="100%" styleName="resource-panel" backgroundColor="#766776">
            <item-renderer styleName="lobby-item">
                <hbox width="100" height="32" backgroundColor="#ffffff">
                    <image id="resource_icon" width="32" height="100%" verticalAlign="center"/>
                    <label id="amount" verticalAlign="center"/> 
                </hbox>
            </item-renderer>
            <data>
                <item amount="1000" resource_icon="assets/images/wood.png" />
                <item amount="20"   resource_icon="assets/images/meat.png" />
                <item amount="50"   resource_icon="assets/images/gold-ingots.png" />
                <item amount="10"   resource_icon="assets/images/coal.png" />
            </data>
        </hbox>
        <hbox width="100%" height="100%" backgroundColor="#123123"/>
    </hbox>
    
    <!--header-->
    <hbox styleName="bottom-menu" width="100%" height="15%" verticalAlign="bottom">
        <vbox styleName="mini-map" width="15%" height="100%" backgroundColor="#123123">
            <vbox id='mapHolder' width="100%" height="100%"/>
            <!--<box width="100%" height="90%" >
                <mini-map id="miniMap" width="100%" height="100%" miniMapImage="assets/images/minimap.png"/>
            </box>-->
            <hbox width="100%">
                <button id="inc" text="+"/>
                <button id="dec" text="-"/>
            </hbox>
        </vbox>

    </hbox>
   
    <!--Main content-->
    
</box>