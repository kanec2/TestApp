                </data>
            </listview>
            <hbox width="50%" height="100%">
                <stack id="stack1" width="100%" height="100%">

                    <vbox style="background-color:black" width="100%" height="100%">
                        <scrollview width="100%" height="100%">
                            <vbox>

                            <image resource="assets/images/post-1.jpg" width="100%" height="100%" />
                            <label id="lstHeaderText" styleName="h1" width="100%" textAlign="justify" style="color:white; font-size:16px; margin:0; padding:0" text="SMELL MAGIC IN THE AIR. OR MAYBE BARBECUE"/>
